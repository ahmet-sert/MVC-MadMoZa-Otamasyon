@using MVC_ModMaZa.Models.DbSınıflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<table id="tbl1" class="table table-bordered" style="margin-top:20px; ">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Ürün
            <th>
                Cari
            <th>
                Personel
            </th>
            <th>
                Adet
            </th>
            <th>
                Fiyat
            <th>
                Toplam
            </th>
            <th>
                Tarih

            </th>
            <th>
                Güncelle
            </th>
            <th>
                Detaylar
            </th>

        </tr>
        ,
    </thead>
    @foreach (var item in Model)
    {


        <tr>
            <td> @item.SatisİD </td>
            <td> @item.urun.UrunAd </td>
            <td> @item.cariler.CariAD @item.cariler.CariSoyad </td>
            <td> @item.personel.PersonelAd @item.personel.PersonelSoyad </td>
            <td> @item.Adet </td>
            <td> @item.Fiyat </td>
            <td> @item.ToplamTutar </td>
            <td> @item.Tarih </td>


            <td>
                <a href="/Satis/SatisGetir/@item.SatisİD" class="btn btn-success">Güncelle</a>
            </td>
            <td>
                <a href="/Satis/SatisDetay/@item.SatisİD" class="btn btn btn-outline-primary">Detaylar</a>
            </td>
        </tr>

    }

</table>
<a href="/Satis/YeniSatiş" class="btn btn-info">Yeni Satış Yap</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>
