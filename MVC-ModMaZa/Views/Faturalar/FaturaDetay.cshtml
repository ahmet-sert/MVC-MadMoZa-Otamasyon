@using MVC_ModMaZa.Models.DbSınıflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Fatura Kalem Sayfası</h2>

<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>

<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
        <th>Detaylar</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FaturaKalemid</td>
            <td>@item.Açiklama</td>
            <td>@item.Miktar</td>
            <td>@item.BirimFiyatı</td>
            <td>@item.Tutar</td>
            <td>
                <a href="/departman/DepartmanPersonelSatıs/@item.FaturaKalemid" class="btn btn-default" style="background-color:aquamarine">
                    Satışlar
                </a>
            </td>
        </tr>
    }



</table>
<a href="/Faturalar/YeniKalem" class="btn btn-default"style="background-color:darksalmon">Yeni Kalem Girişi</a>