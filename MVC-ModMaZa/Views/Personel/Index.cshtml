@using MVC_ModMaZa.Models.DbSınıflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<table class="table table-bordered" style="margin-top:20px; ">
    <tr>
        <th>
            ID
        </th>
        <th>
            Personel Ad
        <th>
            Personel Soyad
        <th>
            Personel Görsel
        </th>
        <th>
            Departman
        </th>
        <th>
            Güncelle
        <th>
            Satışlar
        </th>
    
    </tr>
    @foreach (var item in Model)
    {


        <tr>
            <td> @item.ID </td>
            <td> @item.PersonelAd </td>
            <td> @item.PersonelSoyad </td>
            <td> @item.PersonelGörsel </td>
            <td> @item.departman.DepartmanAd </td>
            <td> @item.ID </td>
   

            <td>
                <a href="/Personel/PersonelGetir/@item.ID" class="btn btn-success">Güncelle</a>
            </td>
            <td>
                <a href="/departman/DepartmanPersonelSatıs/@item.ID" class="btn btn btn-outline-primary">Detaylar</a>
            </td>
        </tr>

    }

</table>
<a href="/Personel/Personelekle" class="btn btn-info">Personel Ekle</a>