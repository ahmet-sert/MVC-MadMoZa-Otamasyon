@model MVC_ModMaZa.Models.DbSınıflar.Personel
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3>Cari Güncelleme Sayfası</h3>
<br />
@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
    <div class="form-group">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.ID)
        <label> Personel Ad</label>
        @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })

        <br />
        <label> Personel Soyad</label>
        @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
        <br />
        <label> Personel Görsel</label>
        @Html.TextBoxFor(x => x.PersonelGörsel, new { @class = "form-control" })
        <br />
        <label> Departman</label>
        @Html.DropDownListFor(x => x.DepartmanID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>

    <button class="btn btn-primary">Güncelle </button>
}

